    function payWithPaystack() {
        const p = products[product];
        var handler = PaystackPop.setup({
            key: 'pk_test_d4cd43a90f0a19fd65f5c9c63815e6d68f9c95e8',
            email: 'draevynth@gmail.com',
            amount: p.amount * 100,
            currency: 'USD',
            metadata: { custom_fields: [{ display_name: "Product", variable_name: "product", value: p.title }] },
            callback: function(response){
                window.location.href = "success.html?ref=" + response.reference;
            },
            onClose: function(){
                alert('Transaction was not completed.');
            }
        });
        handler.openIframe();
    }
